<Page x:Class="Yugen.DJ.Uwp.Views.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:controls="using:Yugen.DJ.Uwp.Views.Controls"
      mc:Ignorable="d"
      Background="{ThemeResource TopBackgroundBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
            <RowDefinition Height="20" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <!-- Title Bar -->
        <Grid x:Name="TopBar"
              Grid.ColumnSpan="3">
            <Grid x:Name="AppTitleBar"
                  Background="Transparent"
                  HorizontalAlignment="Stretch">
                <TextBlock Text="Yugen DJ"
                           Style="{StaticResource CaptionTextBlockStyle}"
                           Margin="16,8,0,0" />

                <Rectangle Fill="{StaticResource SystemAccentColor}"
                           Height="20"
                           HorizontalAlignment="Right"
                           Margin="0,0,160,0"
                           Width="1" />
            </Grid>

            <Button x:Name="TitleBarButton"
                    Background="Transparent"
                    BorderThickness="0"
                    Canvas.ZIndex="1"
                    Command="{x:Bind ViewModel.SettingsCommand}"
                    Foreground="{StaticResource SystemColorHighlightBrush}"
                    HorizontalAlignment="Right">
                <FontIcon Glyph="{StaticResource SettingsIcon}" />
            </Button>
        </Grid>

        <!-- Bottom Panel -->
        <Rectangle Grid.ColumnSpan="3"
                   Grid.Row="1"
                   Grid.RowSpan="2"
                   VerticalAlignment="Bottom"
                   Fill="{ThemeResource BottomBackgroundBrush}"
                   Height="178" />

        <!-- Column 0 -->
        <controls:Deck Grid.Column="0"
                       Grid.Row="1"
                       DataContext="{x:Bind ViewModel.LeftDeckViewModel}" />

        <!-- Column 1 -->
        <controls:Mixer Grid.Column="1"
                        Grid.Row="1"
                        Width="240" />

        <!-- Column 2 -->
        <controls:Deck Grid.Column="2"
                       Grid.Row="1"
                       DataContext="{x:Bind ViewModel.RightDeckViewModel}" />
    </Grid>
</Page>